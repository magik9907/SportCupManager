                            <TextBlock Text=" Usuń" Background="White" Margin="10,10,10,10" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>  


        </Grid>
        <TextBlock Text=" Usuń" Margin="37,65,763,349" Padding="20,20,20,20" Background="#FFA8A4A4" Width="100" Height="70" FontSize="16" FontWeight="Bold" />
