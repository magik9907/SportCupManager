        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportCupManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900" Background="#FF939090">
    <Window.Resources>
      
    </Window.Resources>


    <Grid>
