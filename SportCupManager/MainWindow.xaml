<Window x:Class="SportCupManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportCupManager"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Title="MainWindow" Height="auto" Width="auto" Background="#FF939090">
    <Window.Resources>

    </Window.Resources>


    <Grid Height="500" Width="900">
        <ScrollViewer Margin="188,21,10,10">
            <Grid x:Name="MainGrid" ScrollViewer.CanContentScroll="True" Background="white">
                <Grid x:Name="TournamentCreateGrid">
                    <Label Content="Tworzenie Turnieju" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="30"/>
                    <TextBox Name="Create_TournamentName" HorizontalAlignment="Left" Margin="10,60,0,0" Text="Nazwa" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" FontSize="18"/>
                    <ComboBox Name="Create_DyscyplineComboBox" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="189" FontSize="18">
                        <ComboBoxItem Content="Volleyball" IsSelected="True"></ComboBoxItem>
                        <ComboBoxItem Content="Tug Of War"></ComboBoxItem>
                        <ComboBoxItem Content="Dodgeball"></ComboBoxItem>
                    </ComboBox>
                    <Button Content="Stwórz turniej" HorizontalAlignment="Left" Margin="538,425,0,0" VerticalAlignment="Top" FontSize="18" Height="34" Width="137" Click="TournamentCreateButton_Click"/>
                </Grid>
                <Grid x:Name="TournamentLoadGrid" Visibility="Collapsed" >
                    <ItemsControl  Name="Resources">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="30,30,30,0" Background="#FFC2C2FF">
                                    <TextBlock Text="{Binding Name}" Padding="10,10,10,10" HorizontalAlignment="Center" Margin="0,10,0,0" TextAlignment="Center" Background="Azure" Cursor="Hand" MinWidth="200" ></TextBlock>
                                    <Grid>
                                        <TextBlock Text=" Usuń"  Cursor="Hand" Width="200" TextAlignment="Center" Background="White" Margin="10,20,10,20" />
                                    </Grid>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </ScrollViewer>
        <ScrollViewer Margin="10,21,717,10">
            <Grid ScrollViewer.CanContentScroll="True">
                <Label Content="Turniej" Margin="0,10,0,0" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <Button Name="Tournament_Create" Content="Stwórz" HorizontalAlignment="Center" Margin="0,49,0,0" VerticalAlignment="Top" Height="51" Width="102" FontSize="16" Click="Tournament_Create_Click"/>
                <Button Name="Tournament_Load" Content="Wczytaj" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Width="102" FontSize="16" Margin="0,105,0,0" Click="Tournament_Load_Click"/>
            </Grid>
        </ScrollViewer>

    </Grid>
</Window>
